<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    tools:context=".AnimationViewActivity">

<TextView
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="WelcomesYou"
    android:fontFamily="sans-serif-condensed"
    android:textSize="20sp"
    android:textStyle="bold"
    android:gravity="center"
    android:textColor="@color/purple_700"
    android:id="@+id/text_anim"/>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="150dp"
        android:orientation="vertical">
        <Button
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_marginTop="20dp"
            android:id="@+id/trans_btn"
            android:layout_height="wrap_content"
            android:text="See Translation"/>
        <Button
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:id="@+id/alpha_btn"
            android:layout_height="wrap_content"
            android:text="See Alpha Effect"/>
        <Button
            android:layout_width="match_parent"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:id="@+id/rotation_btn"
            android:layout_height="wrap_content"
            android:text="See Rotation"/>
        <Button
            android:layout_width="200dp"
            android:textAllCaps="false"
            android:layout_marginTop="5dp"
            android:id="@+id/scale_btn"
            android:layout_height="wrap_content"
            android:text="See Scaling"/>
    </LinearLayout>
</LinearLayout>