<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RelativeLayout" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.TicTacTheme" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/goooglecolor</item>
        <item name="colorPrimaryDark">@color/goooglecolor</item> <!-- Replace colorPrimaryVariant with colorPrimaryDark sets color of notification bar or action bar-->
        <item name="colorAccent">@color/goooglecolor</item> <!-- Use colorAccent for AppCompat themes accent is responsible to set
        default button, progress bar color etc. -->
        <item name="colorOnPrimary">@color/white</item>
    </style>


    <style name="MyButtonStyle">
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">#E91E63</item>
        <item name="android:backgroundTint">@color/white</item>
    </style>
</resources>